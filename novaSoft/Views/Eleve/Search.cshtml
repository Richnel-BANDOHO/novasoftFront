    </button>

</div>


<script>
    function sendData() {
        var inp = document.getElementById('seacrhVal').value;
        document.location.href = "https://localhost:44312/Eleve/Search/" + inp;

    }

    var seacrhVal = document.getElementById("seacrhVal");
    seacrhVal.addEventListener("keydown", function (e) {
        if (e.keyCode === 13) {
            var inp = document.getElementById('seacrhVal').value;
            document.location.href = "https://localhost:44312/Eleve/Search/" + inp;
        }
    });


</script>

