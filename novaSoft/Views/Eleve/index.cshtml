<!DOCTYPE html>

<html>

<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>

<body>

    @model novaSoft.Models.Eleve
    <div style="        height: 100vh;
        width: 100%;
        background: #d9e8b3;
">

        <div style="        height: 150px;
        margin-top: 50px;
        width: 100%;
        padding: 25px;

  ">
            <h2 style="color:black;">Gestion d'élèves</h2>
            <br />

            @* <a style="font-size:20px; margin-top:50px;" href="@Url.Action("Create","Eleve")">Ajouter un nouveau élève</a>*@

            <br />



            


        </div>



        <br /><br />




              <div style="        width: 100%;
        height: auto;
        min-height: 100vh;
        display: flex;
        flex-wrap: wrap;
        background: white;
        padding: 25px;
        box-shadow: rgba(99, 99, 99, 0.2) 0px 2px 8px 0px;
">
                  

                      @foreach (var p in ViewBag.result)
                      {


                          <div style=" background:white;padding: 5px; max-height:210px; height: auto;min-width: 200px;margin-left: 15px; margin-top: 15px;box-shadow: rgba(0, 0, 0, 0.25) 0px 0.0625em 0.0625em, rgba(0, 0, 0, 0.25) 0px 0.125em 0.5em, rgba(255, 255, 255, 0.1) 0px 0px 0px 1px inset; ">


                              <div id="profilPhoto" style="height:42px; width: 42px;background: #7200c3; border-radius: 5px; margin:10px">
                                  <label class="infoNom"><a href="@Url.Action("EleveContent")/@p.eleveId"> @p.eleveName @p.eleveFirstName </a> </label>
                                  <label class="infoNom" style="margin-top:22px;color:#c6c6c6">@p.eleveClasse @p.eleveSerie</label>
                              </div>

                              <br />


                              <div style="height:auto; width:100%; padding: 10px;">

                                  <label class="eleveInfo">
                                      <img class="iconeEleve" src="https://icons.veryicon.com/png/o/business/multi-color-financial-and-business-icons/dollar-15.png" /> Dernier paiement
                                  </label><br />
                                  <label class="eleveInfo">
                                      <img class="iconeEleve" src="https://www.icone-png.com/png/19/19043.png" /> Dernier montant
                                  </label><br />

                              </div>

                          </div>

                      }
                  



              </div>


    </div>


    <style>

        a {
            text-decoration: none;
        }

        .infoNom {
            position: absolute;
            margin-left: 50px;
            margin-top: 7px;
            font-size: 12px;
        }

        .eleveInfo {
            font-size: smaller;
            color: #b6b6b6;
        }

        .iconeEleve {
            width: 17px;
            height: 17px;
        }
    </style>


</body>
</html>